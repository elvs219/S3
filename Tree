#include<stdio.h>
#include<stdlib.h>
struct node
{
     int data;
     struct node *rchild,*lchild ;
};
struct node*createnode(int item)
{
struct node*p;
p=(struct node*)malloc(sizeof(struct node));
p->data=item;
p->rchild=NULL;
p->lchild=NULL;
return p;
};
void traversal( struct node *root);
struct node *insert(struct node *root,struct node * n);
void main()
{
int data,ch;
struct node *n,*root=NULL;
while(1)
{
printf("enter the data to be inserted");
scanf("%d",&data);
n=createnode(data);
root=insert(root,n);
traversal(root);

}
}
struct node *insert(struct node *root, struct node *n)
{
struct node *p,*ptr;
if(root==NULL)
{
root=n;
}
else
{
ptr=root;
while(ptr!=NULL)
{
if(ptr->data>=n->data)
{
p=ptr;
ptr=ptr->lchild;
}
else
{
p=ptr;
ptr=ptr->rchild;
}
}
if(p->data>=n->data)
{
p->lchild=n;
}
else
{
p->rchild=n;
}
}
return root;
}
void traversal(struct node *root)
{
if(root!=NULL)
{
traversal(root->lchild);
printf("%d ",root->data);
traversal(root->rchild);
}
}
